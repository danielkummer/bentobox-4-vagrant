= simple_form_for @vagrantbox, html:{class: "form-horizontal"} do |f|
  %fieldset
    %legend Configure vagrantbox
    = f.input :name
    = f.input :box
    .control-group
      = f.label :remove_box, "Remove box?", class: "control-label"
      .controls
        = f.check_box :remove_box

    .form-actions
      = f.submit 'Save', class: "btn btn-success"
      = link_to 'Back', bentoboxes_path, class: "btn"
