.page-header
  %h1
    Vagrantboxes
    %small available base boxes

%table{class: 'table table-striped'}
  %tr
    %th Name
    %th Box
    %th
    %th
    %th

  - @vagrantboxes.each do |vagrantbox|
    %tr
      %td= vagrantbox.name
      %td= vagrantbox.box_filename
      %td
        = link_to vagrantbox, class: "btn btn-info" do
          %i.icon-eye-open
          Show
      %td
        = link_to edit_vagrantbox_path(vagrantbox), class: "btn" do
          %i.icon-edit
          Edit
      %td
        = link_to vagrantbox, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" do
          %i.icon-trash
          Delete

%br

= link_to 'New Vagrantbox', new_vagrantbox_path, class: "btn btn-large btn-success"
