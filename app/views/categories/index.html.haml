%h1 Listing categories

%table{class: 'table table-striped'}
  %tr
    %th Name
    %th
    %th
    %th

  - @categories.each do |category|
    %tr
      %td= category.name
      %td= link_to 'Show', category, class: "btn btn-info"
      %td= link_to 'Edit', edit_category_path(category), class: "btn btn-success"
      %td= link_to 'Destroy', category, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger"

%br

= link_to 'New Category', new_category_path, class: "btn btn-large btn-success"
