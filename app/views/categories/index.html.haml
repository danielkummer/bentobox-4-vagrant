.page-header
  %h1
    Categories
    %small ...for ingredients

%table{class: 'table table-striped'}
  %tr
    %th Name
    %th
    %th

  - @categories.each do |category|
    %tr
      %td= category.name
      %td
        = link_to edit_category_path(category), class: "btn" do
          %i.icon-edit
          Edit
      %td
        = link_to category, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" do
          %i.icon-remove
          Delete

%br

= link_to 'New Category', new_category_path, class: "btn btn-large btn-success"
