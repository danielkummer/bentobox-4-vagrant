
= simple_form_for @user, html:{class: "form-horizontal"} do |f|
  = f.input :client_name, :hint => "Warning! Changing the client name results in a new private key file!"
  .form-actions
    = f.submit 'Save', class: "btn btn-success"
    = link_to 'Back', user_path(@user), class: "btn"



= render :template => 'devise/registrations/edit', :locals => { :resource => current_user, :resource_name => 'User' }
