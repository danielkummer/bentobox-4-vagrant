
.page-header
  %h1
    = @user.email
    %small
    .pull-right
      = link_to edit_user_path(@user), :class => "btn btn-large" do
        %i.icon-edit
        Edit

%p#notice= notice

.row
  .span2
    %ul.thumbnails
      %li.span2
        .thumbnail
          = image_tag "#{(request.ssl? ? 'https://secure' : 'http://www')}.gravatar.com/avatar/#{Digest::MD5.hexdigest current_user.email}?s=160&d=identicon", :style => 'padding-top:5px'

  .span6
    .well
      %h3
        %i.icon-user
        Chef client:
        = @user.client_name
      %p.lead
        Status
        = true_false_label(!@user.private_key.blank?)

      - unless @user.private_key.blank?
        %h3
          %i.icon-lock
          Private key
        .btn-group
          %a.btn{'data-toggle' => "modal", href: "#privateKeyModal" }
            %i.icon-eye-open
            Show
          = link_to download_key_user_path(@user),  :class => "btn" do
            %i.icon-download-alt
            Download
      %h3 Actions
      .btn-group
        - if @user.private_key.blank?
          = link_to chef_create_client_path(@user), :class => "btn" do
            %i.icon-user
            Create chef client
        - else
          = link_to chef_delete_client_path(@user),  :class => "btn btn-danger" do
            %i.icon-remove
            Delete chef client




#privateKeyModal.modal.hide
  .modal-header
    %button.close{"data-dismiss" => "modal", :type => "button"} Ã—
    %h3= "Private key for chef client: #{@user.client_name}"
  .modal-body
    %p= @user.private_key