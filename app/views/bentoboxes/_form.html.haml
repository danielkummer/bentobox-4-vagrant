= simple_form_for [@user, @bentobox], html:{class: "form-horizontal"} do |f|
  %fieldset
    %legend pick your base box
    .row
      .span2
        %ul.thumbnails
          %li.span2
            .thumbnail
              = image_tag 'vagrant_box.png'

      .span6
        = f.input :vagrantbox, :collection  => Vagrantbox.all, :prompt => "Choose a base box"
    %legend stuff some ingredients in
    .row
      .span2
        %ul.thumbnails
          %li.span2
            .thumbnail
              = image_tag 'vagrant_add.png'
      .span6
        /= f.input :ingredients, :collection => Ingredient.all, :group , :prompt => "Choose a Category"
        /= f.collection_check_boxes :ingredient_ids, Ingredient.all, :as => :grouped_select, :group_method => :category
        /= f.association :roles,
        /todo this is not using simple_form
        .control-group
          = f.label :ingredient_ids, "Choose your ingredients", class: "control-label"
          = f.collection_check_boxes(:ingredient_ids, Ingredient.all.sort(category: -1), :id, :name, {collection_wrapper_tag: 'div class="controls"', item_wrapper_tag: 'label class="checkbox"'}, {multiple: true})






    %legend describe it
    .row
      .span2
        %ul.thumbnails
          %li.span2
            .thumbnail
              = image_tag 'vagrant_pack.png'
      .span6
        = f.input :name
        = f.input :description, as: :text,:input_html => { :rows => 20, :cols => 50}
        = f.input :public, as: :boolean, label: "Share your box?"

    .form-actions
      = f.submit 'Save', class: "btn btn-primary"
      = link_to 'Back', bentoboxes_path, class: "btn"
