Vagrant::Config.run do |config|
  <%= config_vm_box_name %>
  <%= config_vm_box_url %>
  # Boot with a GUI so you can see the screen. (Default is headless)
  # config.vm.boot_mode = :gui

  <%= config_network %>
  <%= config_portmapping %>
  <%= config_share_folders %>

  config.vm.provision :chef_client do |chef|
    chef.chef_server_url = "<%= AppConfiguration.get('chef server api url') %>"
    chef.node_name = "<%= config_unique_node_name %>"

    chef.validation_key_path = "validation.pem"
    chef.validation_client_name = "chef-validator"

    <%= config_recipes %>

    # Todo add configure options for recepies e.g
    # chef.add_recipe "nodejs"
    # chef.json =	{
    #   "nodejs" => {
    #   "version" => "0.5.0"
    #   }
    # }
    # Todo add runlist support e.g
    # adjust the run list to suit your testing needs
    #  chef.run_list = [
    #   "recipe[some_cookbook::some_recipe]"
    #  "role[some_role]"
    #  ]
  end

  <%=  config_additional_configurations %>
end


