.page-header
  %h1
    Ingredients
    %small what goes in the box?

%table{class: 'table table-striped'}
  %tr
    %th Name
    %th Cookbooks
    %th Share Folder
    %th Network Config
    %th
    %th
    %th

  - @ingredients.each do |ingredient|
    %tr
      %td= ingredient.name
      %td= ingredient.cookbooks
      %td= ingredient.share_folders.exists?
      %td= ingredient.network_config.to_s unless ingredient.network_config.nil?
      %td
        = link_to ingredient, class: "btn btn-info" do
          %i.icon-eye-open
          Show
      %td
        = link_to edit_ingredient_path(ingredient), class: "btn" do
          %i.icon-edit
          Edit
      %td
        = link_to ingredient, :confirm => 'Are you sure?', :method => :delete, class: "btn btn-danger" do
          %i.icon-remove
          Delete


%br

= link_to 'New Ingredient', new_ingredient_path, class: "btn btn-large btn-success"
