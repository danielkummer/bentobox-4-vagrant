%fieldset
  .control-group
    = f.label :mapping, class: "control-label"
    .controls
      = f.text_field :mapping, class: "input-small", :placeholder => "[guest port]:[host port]"
  .control-group
    = f.label :_destroy, "delete", class: "control-label"
    .controls
      = f.hidden_field :_destroy
      = link_to 'remove', '#', class: "remove_fields btn btn-small btn-danger"